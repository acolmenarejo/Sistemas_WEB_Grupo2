<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

	<servlet>
		<servlet-name>tematica</servlet-name>
		<servlet-class>BBDD.tematica</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>tematica2</servlet-name>
		<servlet-class>BBDD.tematica</servlet-class>
		<init-param>
			<param-name>tematica</param-name>
			<param-value>PCs y electronica</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>tematica3</servlet-name>
		<servlet-class>BBDD.tematica</servlet-class>
		<init-param>
			<param-name>tematica</param-name>
			<param-value>Pokemon</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>tematica4</servlet-name>
		<servlet-class>BBDD.tematica</servlet-class>
		<init-param>
			<param-name>tematica</param-name>
			<param-value>Web programming</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>tematica2</servlet-name>
		<url-pattern>/tematica2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tematica3</servlet-name>
		<url-pattern>/tematica3</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tematica4</servlet-name>
		<url-pattern>/tematica4</url-pattern>
	</servlet-mapping>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/paginasError/error.html</location>

	</error-page>
	<error-page>
		<exception-type>java.io.IOException</exception-type>
		<location>/paginasError/error.html</location>

	</error-page>
	<session-config>
		<session-timeout>25</session-timeout>
	</session-config>

	<listener>
		<listener-class>listeners.listenerSesion</listener-class>
	</listener>


</web-app>


